extends layout
 
block content
  section
      .container
        .row.align-items-center
          .col-lg-6
            .p-5
              img.img-fluid.rounded-circle(src={displayPicture}, alt='display picture')
          .col-lg-6
            .p-5
              h2(style="color:white;font-family: 'Billabong'")
                b 
                  =username
                |  
                |  
                a(style='color:white', href='/edit')
                  i.fa.fa-edit(style='color:white;font-size:30px;')
                |  
                |  
                a(style='color:white', href='/')
                  i.fa.fa-sign-out(style='color:white;font-size:30px;')
              a.js-scroll-trigger(style='color:white', href='#portfolio')
                b  
                  =posts 
                  |  posts   
                |  
                |  
                |  
              a(style='color:white', href='/followers')
                b 
                  =followers
                  |  followers   
                |  
                |  
                |      
              a(style='color:white', href='/following')
                b 
                  =following 
                  |  following
                |  
                |  
              br
              br
              b(style='color:white')
                =bio
      section#portfolio
        .container
          .row
            .col-lg-12.text-center
              h2.section-heading(style="color:white;font-family: 'Billabong'") portfolio
              br
          .row
            -var index=0;
            each entry in uploads
              .col-md-4.col-sm-6.portfolio-item
                a.portfolio-link( href='/post')
                  img.img-fluid.feedImage(src=entry.img, alt='')
            -index++;